---
// Header component
---

<header class="header">
  <div class="header-container">
    <div class="logo">
      <img src="/src/assets/logo.png" alt="Level UP ENGLISH ACADEMY" />
      <h1>levelUP ENGLISH ACADEMY</h1>
    </div>
    
    <nav class="navigation">
      <a href="#academia">La Academia</a>
      <a href="#como-funciona">Como funciona</a>
      <a href="#comenzar" onclick="scrollToForm()">Comenzar</a>
    </nav>
    
    <div class="contact-number">
      <span>+58 412-0160049</span>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #003049;
    padding: 1rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }
  
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .logo img {
    width: 50px;
    height: 50px;
  }
  
  .logo h1 {
    color: white;
    font-family: 'Satoshi', sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    margin: 0;
    padding: 0;
  }
  
  .navigation {
    display: flex;
    gap: 2rem;
  }
  
  .navigation a {
    color: white;
    text-decoration: none;
    font-family: 'Satoshi', sans-serif;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }
  
  .navigation a:hover {
    opacity: 0.8;
  }
  
  .contact-number {
    background-color: #003049;
    border: 2px solid white;
    border-radius: 8px;
    padding: 0.5rem 1rem;
  }
  
  .contact-number span {
    color: white;
    font-family: 'Satoshi', sans-serif;
    font-weight: 600;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .header {
      padding: 0.8rem 0;
    }
    
    .header-container {
      padding: 0 1rem;
      gap: 1rem;
    }
    
    .logo {
      gap: 0.8rem;
    }
    
    .logo img {
      width: 40px;
      height: 40px;
    }
    
    .logo h1 {
      font-size: 1rem;
      white-space: nowrap;
    }
    
    .navigation {
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .navigation a {
      font-size: 0.9rem;
      white-space: nowrap;
    }
    
    .contact-number {
      padding: 0.4rem 0.8rem;
      white-space: nowrap;
    }
    
    .contact-number span {
      font-size: 0.9rem;
    }
  }
  
  @media (max-width: 480px) {
    .header-container {
      padding: 0 0.8rem;
      gap: 0.8rem;
    }
    
    .logo {
      gap: 0.6rem;
    }
    
    .logo img {
      width: 35px;
      height: 35px;
    }
    
    .logo h1 {
      display: none; /* Ocultar el texto en mobile */
    }
    
    .navigation {
      gap: 0.8rem;
    }
    
    .navigation a {
      font-size: 0.8rem;
    }
    
    .contact-number {
      padding: 0.3rem 0.6rem;
    }
    
    .contact-number span {
      font-size: 0.8rem;
    }
  }
</style>

<script>
  function scrollToForm() {
    const form = document.querySelector('.contact-form');
    if (form) {
      form.scrollIntoView({ 
        behavior: 'smooth',
        block: 'center'
      });
    }
  }
</script>
