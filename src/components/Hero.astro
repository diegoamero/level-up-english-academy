---
import ContactForm from './ContactForm.astro';
// Hero component with background image and contact form
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-image">
      <img src="/src/assets/mainImage.png" alt="Estudiante aprendiendo en lÃ­nea" />
      <div class="hero-text-overlay">
        <h1>APRENDE DE LA MEJOR FORMA DESDE LA COMODIDAD DE TU CASA</h1>
      </div>
    </div>
    
    <div class="hero-form">
      <ContactForm />
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    margin-top: 80px;
    padding: 2rem 0;
  }
  
  .hero-content {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    gap: 2rem;
    align-items: center;
    height: calc(100vh - 80px);
  }
  
  .hero-image {
    flex: 0.7;
    height: 100%;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }
  
  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-text-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 48, 73, 0.3);
  }
  
  .hero-text-overlay h1 {
    color: white;
    font-family: 'Satoshi', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    padding: 0 2rem;
  }
  
  .hero-form {
    flex: 0.3;
    height: 100%;
    display: flex;
    align-items: center;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .hero {
      padding: 1rem 0;
      margin-top: 80px;
    }
    
    .hero-content {
      flex-direction: column;
      gap: 1.5rem;
      height: auto;
      min-height: auto;
      width: 95%;
    }
    
    .hero-image {
      flex: none;
      height: 280px;
      width: 100%;
    }
    
    .hero-text-overlay h1 {
      font-size: 1.6rem;
      padding: 0 1rem;
      line-height: 1.3;
    }
    
    .hero-form {
      flex: none;
      height: auto;
      width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .hero {
      padding: 0.8rem 0;
    }
    
    .hero-content {
      width: 98%;
      gap: 1.2rem;
    }
    
    .hero-image {
      height: 240px;
    }
    
    .hero-text-overlay h1 {
      font-size: 1.4rem;
      padding: 0 0.8rem;
      line-height: 1.4;
    }
  }
</style>
